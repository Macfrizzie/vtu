
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role via custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Admins have full read/write access to all documents.
    match /{path=**} {
      allow read, write: if isAdmin();
    }

    // --- Rules for All Authenticated Users ---

    match /users/{userId} {
      // Allow a user to create their own user document IF the data is valid
      // and the UID matches. This is a critical rule for signup.
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.uid == userId
                    && request.resource.data.email == request.auth.token.email
                    && request.resource.data.fullName is string
                    && request.resource.data.phone is string
                    && request.resource.data.walletBalance == 0
                    && request.resource.data.role == 'Customer';

      // Allow a user to read their own user document
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow a user to UPDATE only their 'fullName' and 'phone' fields.
      // Also allow admins to update 'lastLogin' for them.
      allow update: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.fullName == request.resource.data.fullName
                    && request.resource.data.phone == request.resource.data.phone
                    && request.resource.data.keys().hasAll(['fullName', 'phone']) == false // ensure no other fields are changed
                    && request.resource.data.keys().hasOnly(['fullName', 'phone', 'lastLogin']);
    }

    // Allow users to read and create their own transactions.
    match /transactions/{transactionId} {
        allow list, read: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Allow users to read public service and pricing information.
    match /services/{serviceId} {
        allow read: if request.auth != null;
    }
    match /dataPlans/{planId} {
        allow read: if request.auth != null;
    }
    match /cablePlans/{planId} {
        allow read: if request.auth != null;
    }
     match /discos/{discoId} {
        allow read: if request.auth != null;
    }
    match /rechargeCardDenominations/{denomId} {
        allow read: if request.auth != null;
    }
    match /educationPinTypes/{pinId} {
        allow read: if request.auth != null;
    }
  }
}
