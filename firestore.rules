
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Admins have full read/write access to all documents and collections.
    // This rule allows admins to perform list queries on collections.
    match /{path=**} {
      allow read, write: if isAdmin();
    }

    // All authenticated users can read and write their OWN user document.
    // This is necessary for profile management and for the client to read its own role.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
