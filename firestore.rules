
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role via custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Admins have full read/write access to all documents.
    match /{path=**} {
      allow read, write: if isAdmin();
    }

    // --- Rules for All Authenticated Users ---

    match /users/{userId} {
      // Allow a user to create their own user document
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow a user to read their own user document
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow a user to UPDATE only a specific, safe list of fields on their own document.
      allow update: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.keys().hasOnly(['lastLogin', 'status', 'fullName', 'phone', 'role', 'walletBalance', 'reservedAccount', 'createdAt', 'uid', 'email']);
    }

    // Allow users to read and create their own transactions.
    match /transactions/{transactionId} {
        allow list, read: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Allow users to read public service and pricing information.
    match /services/{serviceId} {
        allow read: if request.auth != null;
    }
    match /dataPlans/{planId} {
        allow read: if request.auth != null;
    }
    match /cablePlans/{planId} {
        allow read: if request.auth != null;
    }
     match /discos/{discoId} {
        allow read: if request.auth != null;
    }
    match /rechargeCardDenominations/{denomId} {
        allow read: if request.auth != null;
    }
    match /educationPinTypes/{pinId} {
        allow read: if request.auth != null;
    }
  }
}
