
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Admins have full read/write access to all documents in the database.
    // This rule is checked first and provides broad access for admin users.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // All authenticated users can read and write their OWN user document.
    // This is necessary for profile management and for the client to read its own role.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
